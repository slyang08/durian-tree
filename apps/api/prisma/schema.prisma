generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Store {
  id   Int    @id @default(autoincrement())
  name String @unique
  createdAt DateTime @default(now())

  inventories Inventory[]
}

model Inventory {
  id      Int      @id @default(autoincrement())
  date    DateTime @db.Date
  createdAt DateTime @default(now())

  store   Store    @relation(fields: [storeId], references: [id])
  storeId Int

  items   InventoryItem[]

  @@unique([storeId, date])
  @@index([storeId])
}

model DurianVariety {
  id   Int    @id @default(autoincrement())
  name String @unique
  desc String?
  isActive Boolean @default(true)
  createdAt DateTime @default(now())

  items InventoryItem[]
}

model InventoryItem {
  id Int @id @default(autoincrement())
  quantity Int @default(0)
  price    Decimal @db.Decimal(10,2)
  updatedAt DateTime @updatedAt
  isDeleted Boolean @default(false)

  inventory   Inventory @relation(fields: [inventoryId], references: [id])
  inventoryId Int

  variety   DurianVariety @relation(fields: [varietyId], references: [id])
  varietyId Int

  @@unique([inventoryId, varietyId])
  @@index([inventoryId])
  @@index([varietyId])
}
